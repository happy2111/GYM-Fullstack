{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "checkJs": false,
    "allowJs": true,
    "noEmit": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx", "app", "pages", "components", "src/types"],

  "exclude": ["node_modules", "dist"]
}
